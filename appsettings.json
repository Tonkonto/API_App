{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Connection1": "Host=localhost;Port=5432;Database=api_app_db;Username=api_user;Password=api_user_pass"
  },

  "Jwt": {
    "Key": "a-string-secret-at-least-256-bits-long",
    "Issuer": "API_App",
    "Audience": "API_App_Users",
    "ExpireMinutes": 60
  },

  "Kestrel": {
    "Endpoints": {
      "Https": {
        "Url": "https://localhost:7001",
        "xUrl": "https://0.0.0.0:7001"
      }
    }
  },

  "Brute": {
    "MaxFailedLoginAttempts": 3,
    "LoginLockMinutes": 15
  },

  "debug": {
    "admin_key": "0000"
  }
}
